---
import scarsImage from "../assets/scars1.jpeg";
import cineboxImage from "../assets/cinebox.jpeg";
import medicpageImage from "../assets/medicpage.png";

const projects = [
    {
        title: "Scars - Taller Mecánico",
        description:
            "Sitio web profesional para un taller mecánico. Integración de IA para asistencia al cliente incluyendo un sistema de gestión de solicitudes",
        image: scarsImage.src,
        tags: ["React", "Vite", "Express", "OpenAI API"],
    },
    {
        title: "Cinebox",
        description:
            "Aplicación de gestión y catálogo de películas. Arquitectura robusta y escalable con un backend modular y tipado estático.",
        image: cineboxImage.src,
        tags: ["React", "TypeScript", "NestJS"],
    },
    {
        title: "MedicPage",
        description:
            "Sistema integral de agendamiento de citas médicas. Proyecto académico que gestiona horarios, doctores y pacientes de manera eficiente.",
        image: medicpageImage.src,
        tags: ["React", "Vite", "Laravel"],
    },
];
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {
        projects.map((project) => (
            <div class="group bg-base-100 rounded-2xl overflow-hidden border border-base-200 dark:border-slate-800 shadow-sm hover:shadow-xl hover:shadow-[#1fa3de]/10 transition-all duration-300 flex flex-col h-full hover:-translate-y-1">
                <div class="relative h-48 overflow-hidden">
                    <div class="absolute inset-0 bg-slate-900/10 group-hover:bg-transparent transition-colors duration-300 z-10" />
                    <img
                        src={project.image}
                        alt={project.title}
                        class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500"
                    />
                    <div class="absolute top-4 right-4 bg-base-100/90 backdrop-blur-sm px-3 py-1 rounded-full text-xs font-bold text-base-content z-20 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                        Destacado
                    </div>
                </div>

                <div class="p-8 flex flex-col flex-grow">
                    <h3 class="text-xl font-bold text-base-content mb-3 group-hover:text-[#1fa3de] transition-colors">
                        {project.title}
                    </h3>
                    <p class="text-slate-500 dark:!text-slate-100 text-sm leading-relaxed mb-6 flex-grow">
                        {project.description}
                    </p>

                    <div class="flex flex-wrap gap-2 mb-8">
                        {project.tags.map((tag) => (
                            <span class="px-3 py-1 bg-base-200 text-slate-600 dark:!text-slate-100 text-xs font-medium rounded-full border border-base-300 dark:border-slate-700 group-hover:border-[#1fa3de]/30 transition-colors">
                                {tag}
                            </span>
                        ))}
                    </div>

                    <div class="mt-auto">
                        <a
                            href="#contact"
                            class="w-full bg-[#1fa3de] text-white py-3 px-6 rounded-xl text-sm font-semibold text-center hover:bg-[#1fa3de]/90 transition-all shadow-lg shadow-[#1fa3de]/20 hover:shadow-[#1fa3de]/40 flex items-center justify-center gap-2 group/btn"
                        >
                            <span>Me interesa / Consultar</span>
                            <svg
                                class="w-4 h-4 transform group-hover/btn:translate-x-1 transition-transform"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M14 5l7 7m0 0l-7 7m7-7H3"
                                />
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        ))
    }
</div>
